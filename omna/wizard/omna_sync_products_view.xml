<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <record id="view_sync_products_wizard" model="ir.ui.view">
            <field name="name">omna.sync.products.wizard.form</field>
            <field name="model">omna.sync_products_wizard</field>
            <field name="arch" type="xml">
                <form string="Import Products">
                    <group>
                        <div>
                            Wizard to import products from OMNA.
                        </div>
                    </group>
                    <group>
                        <group>
                            <field name="sync_type" widget="radio"/>
                        </group>
                        <group>
                            <field name="integration_id"
                                   attrs="{'invisible': [('sync_type', '=', 'all')],
                                   'required': [('sync_type', '!=', 'all')]}"/>
                            <field name="template_id"
                                   attrs="{'invisible': [('sync_type', 'in', ['all','by_integration'])],
                                   'required': [('sync_type', 'not in', ['all','by_integration', 'import_updated_products'])]}"/>
                            <!--<field name="number" invisible="1"/>-->
                            <!--<field name="external_id" invisible="1"/>-->
                        </group>
                    </group>
                    <footer>
                        <button string='Import Products' name="sync_products" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sync_products_wizard" model="ir.actions.act_window">
            <field name="name">Import Products</field>
            <field name="res_model">omna.sync_products_wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_sync_products_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_omna_sync_products" name="Import Products"
                  parent="menu_omna_settings_alt" sequence="3"
                  action="action_sync_products_wizard"/>



</odoo>
