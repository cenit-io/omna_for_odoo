<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="integration_properties_tree_view" model="ir.ui.view">
        <field name="name">integration.properties.tree</field>
        <field name="model">integration.properties</field>
        <field name="arch" type="xml">
            <tree string="Properties of Integrations">
                <field name="integration_id"/>
                <field name="property_label"/>
                <field name="property_type"/>
                <field name="property_required"/>
                <field name="property_readonly"/>
            </tree>
        </field>
    </record>

    <record id="integration_properties_form_view" model="ir.ui.view">
        <field name="name">integration.properties.form</field>
        <field name="model">integration.properties</field>
        <field name="arch" type="xml">
            <form string="Properties of Integrations">
                <sheet>
                    <group>
                        <label for="integration_id" class=""/>
                        <h1>
                            <field name="integration_id"/>
                        </h1>
                        <label for="property_name" class=""/>
                        <h2>
                            <field name="property_name"/>
                        </h2>
                        <label for="property_type" class=""/>
                        <h2>
                            <field name="property_type"/>
                        </h2>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="integration_properties_search_view" model="ir.ui.view">
        <field name="name">integration.properties.search</field>
        <field name="model">integration.properties</field>
        <field name="arch" type="xml">
            <search string="Properties of Integrations">
                <field name="integration_id"/>
                <field name="property_name"/>
                <field name="property_type"/>
            </search>
        </field>
    </record>

    <record id="action_integration_properties" model="ir.actions.act_window">
        <field name="name">Properties of Integrations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">integration.properties</field>
        <field name="view_mode">tree,form</field>
        <!--            <field name="context">{'search_default_current_tenant': 1}</field>-->
    </record>

    <menuitem id="menu_integration_properties" name="Properties of Integrations" parent="menu_omna_integrations"
              sequence="11"
              action="action_integration_properties"/>


<!--    -->

    <record id="properties_values_tree_view" model="ir.ui.view">
        <field name="name">properties.values.tree</field>
        <field name="model">properties.values</field>
        <field name="arch" type="xml">
            <tree string="Properties Values" create="0">
                <field name="product_template_id"/>
                <field name="integration_id"/>
                <field name="property_name"/>
                <field name="property_display_value"/>
<!--                <field name="property_type" invisible="1"/>-->
<!--                <field name="property_value" attrs="{'invisible':[('property_type','!=','text')]}"/>-->
<!--                <field name="property_integer_value" attrs="{'invisible':[('property_type','!=','numeric')]}"/>-->
<!--                <field name="property_float_value" attrs="{'invisible':[('property_type','!=','numeric')]}"/>-->
<!--                <field name="property_boolean_value" attrs="{'invisible':[('property_type','!=','bool')]}"/>-->
<!--                <field name="property_date_value" attrs="{'invisible':[('property_type','!=','date')]}"/>-->
<!--                <field name="property_selection_value" attrs="{'invisible':[('property_type','!=','single_select')]}"/>-->
<!--                <field name="property_rich_text_value" attrs="{'invisible':[('property_type','!=','rich_text')]}"/>-->
<!--                <field name="property_category_value" attrs="{'invisible':[('property_type','!=','single_select_with_remote_options'), ('property_name','!=','category_id')]}"/>-->
<!--                <field name="property_brand_value" attrs="{'invisible':[('property_type','!=','single_select_with_remote_options'), ('property_name','!=','brand')]}"/>-->
                <groupby name="product_template_id">
                    <field name="name" invisible="1"/>
                </groupby>
            </tree>
        </field>
    </record>

    <record id="properties_values_form_view" model="ir.ui.view">
        <field name="name">properties.values.form</field>
        <field name="model">properties.values</field>
        <field name="arch" type="xml">
            <form string="Properties Values" create="0" edit="1">
                <sheet>
                    <group>
                        <field name="property_id"/>
                        <field name="integration_id"/>
                        <field name="product_template_id"/>
                    </group>
                    <group>
                        <field name="property_name"/>
                        <field name="property_value"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="properties_values_search_view" model="ir.ui.view">
        <field name="name">properties.values.search</field>
        <field name="model">properties.values</field>
        <field name="arch" type="xml">
            <search string="Properties Values">
                <field name="integration_id"/>
                <field name="product_template_id"/>
            </search>
        </field>
    </record>

    <record id="action_properties_values" model="ir.actions.act_window">
        <field name="name">Properties Values</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">properties.values</field>
        <field name="view_mode">tree,form</field>
        <!--            <field name="context">{'search_default_current_tenant': 1}</field>-->
    </record>

    <menuitem id="menu_properties_values" name="Properties Values" parent="menu_omna_integrations"
              sequence="12"
              action="action_properties_values"/>


<!--    -->

    <record id="properties_values_variant_tree_view" model="ir.ui.view">
        <field name="name">properties.values.variant.tree</field>
        <field name="model">properties.values.variant</field>
        <field name="arch" type="xml">
            <tree string="Properties Values" create="0">
                <field name="product_product_id"/>
